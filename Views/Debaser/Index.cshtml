@model IEnumerable<IF_Debaser.Models.DebaserModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Spelningar</h2>

<form asp-controller="Debaser" asp-action="Index">
    <p>
        Från: <input type="date" name="fromDate" required=true >
        Till: <input type="date" name="toDate" required=true>
        Klubb: <input type="text" name="venueName" readonly = true value = "Strand">

        <input type="submit" value="Sök" />
    </p>
</form>

<table class="table">
    <tr>
        <th>
            Artist
        </th>
        <th>
            Kostnad
        </th>
        <th>
            Speldag
        </th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.eventType)
            </td>
            <td width="500px">
                @Html.DisplayFor(modelItem => item.admission)
            </td>
            <td width="150px">
                @Html.DisplayFor(modelItem => item.eventDate)
            </td>
        </tr>
    }

</table>
